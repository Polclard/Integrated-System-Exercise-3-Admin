@{
}
@model List<IntegratedSystemsExamAdmin.Models.Vaccine>

    <h1>
        All Vacciness
    </h1>
    <hr />

<div class="container">
    <div class="row m-5">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>Vaccine Id</th>
                    <th>
                        Manufacturer
                    </th>
                    <th>
                        Patient Full Name
                    </th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var item = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@item.Id</td>
                        <td>
                            @item.Manufacturer
                        </td>

                        <td>
                            @item.PatientFor.FirstName @item.PatientFor.LastName
                        </td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">View Details for Vaccine</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>