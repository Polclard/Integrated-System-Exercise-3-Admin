<div class="container">
    <div class="row m-5">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>Patient Id</th>
                    <th>
                        Patient Full Name
                    </th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var item = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>
                            @item.Id
                        </td>

                        <td>
                            @item.FirstName @item.LastName
                        </td>
                        <td class="text-center">
                            <a asp-controller="Patients" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">View Details for Patient</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>